    <ImageView
        android:id="@+id/calendar_schedule_item_image"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/common_student_default"/>

    <RelativeLayout
        android:layout_toRightOf="@id/calendar_schedule_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >
        <TextView
            android:id="@+id/calendar_schedule_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_black"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/calendar_schedule_desciption"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:gravity="left|center_vertical"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예슬이 외 1명, 국어"
            android:textColor="#aeaeb2"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:singleLine="true"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/calendar_schedule_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="am 2:03 ~ pm 3:03"
            android:textColor="#7f000000"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:singleLine="true"
            android:textSize="11dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#e5e5e5"/>
    </RelativeLayout>

