<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/og_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:paddingBottom="5dp"
        android:elevation="1dp"
        android:background="@drawable/xml_tooltip_r3" >

        <LinearLayout
            android:id="@+id/og_image_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/og_image"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginBottom="3dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/og_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:textColor="#333333"
            style="@style/T3"/>
        <TextView
            android:id="@+id/og_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginBottom="2dp"
            android:textColor="#4b4b4b"
            style="@style/T6"/>
        <TextView
            android:id="@+id/og_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/point_color_2"
            style="@style/T6_small"/>
    </LinearLayout>
</FrameLayout>
