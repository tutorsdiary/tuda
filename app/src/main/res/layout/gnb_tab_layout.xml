<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <View
        android:id="@+id/gnb_base_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gnb_height"
        android:background="@drawable/tab_indicator_blue"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gnb_height"/>

    <ImageView
        android:id="@+id/iconNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="30dp"
        android:paddingBottom="25dp"
        android:src="@drawable/menu_new"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="30dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/countNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="5.5dp"
            android:paddingRight="5.5dp"
            android:background="@drawable/talk_button_r45"
            android:gravity="center"
            android:text="0"
            style="@style/T6_small"
            android:textColor="@color/text_oliveblack"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
