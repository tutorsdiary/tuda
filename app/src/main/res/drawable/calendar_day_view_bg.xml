<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#f6f6f6"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true" android:drawable="@drawable/calendar_day_selected" />
    <item android:state_enabled="true" android:state_selected="true" android:drawable="@drawable/calendar_day_selected" />
    <item android:state_enabled="true" android:state_selected="false" android:drawable="@drawable/calendar_day_normal" />

    <item android:state_enabled="false" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#f6f6f6"/>
        </shape>
    </item>
</selector>
